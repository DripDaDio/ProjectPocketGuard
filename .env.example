# PocketGuard Environment Configuration

# Session Secret (Change this in production!)
SESSION_SECRET=dev_secret_change_me

# Server Port
PORT=3000

# Node Environment (development or production)
NODE_ENV=development

# Database URL
DATABASE_URL="file:./prisma/dev.db"

# Gemini API Key (Get from https://makersuite.google.com/app/apikey)
# Set this to enable AI-powered Finance Buddy chatbot
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Specify Gemini Model (default: gemini-1.5-flash)
# Options: gemini-2.0-flash, gemini-1.5-pro, gemini-1.5-flash
# GEMINI_MODEL=gemini-2.0-flash

# Demo Data Reset on Startup (set to 'true' to reset demo data on each restart)
DEMO_RESET=false
