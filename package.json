  "private": true,
  "description": "PocketGuard - AI-powered personal finance management application with smart expense tracking, budgeting, and financial insights",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "nodemon server.js",
