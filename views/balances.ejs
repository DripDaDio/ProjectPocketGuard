<!-- Add Account Modal -->
<div class="modal-overlay" id="addAccountModal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>Add New Account</h2>
      <button class="btn-close-modal">
        <span class="material-icons-round">close</span>
      </button>
    </div>
    <form class="modal-form" id="addAccountForm">
      <div class="form-group">
        <label for="bankName">
          <span class="material-icons-round">account_balance</span>
          Bank Name
        </label>
        <input type="text" id="bankName" name="bankName" placeholder="Enter bank name" required>
      </div>
      
      <div class="form-group">
        <label for="accountName">
          <span class="material-icons-round">description</span>
          Account Name
        </label>
        <input type="text" id="accountName" name="accountName" placeholder="e.g., Everyday Checking" required>
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <label for="accountType">
            <span class="material-icons-round">category</span>
            Account Type
          </label>
          <select id="accountType" name="type" required>
            <option value="">Select type</option>
            <option value="CHECKING">Checking</option>
            <option value="SAVINGS">Savings</option>
            <option value="CREDIT">Credit Card</option>
            <option value="INVESTMENT">Investment</option>
            <option value="LOAN">Loan</option>
          </select>
        </div>
        
        <div class="form-group">
          <label for="last4">
            <span class="material-icons-round">tag</span>
            Last 4 Digits
          </label>
          <input type="text" id="last4" name="last4" placeholder="1234" maxlength="4" pattern="[0-9]{4}" required>
        </div>
      </div>
      
      <div class="form-group">
        <label for="currentBalance">
          <span class="material-icons-round">account_balance_wallet</span>
          Current Balance
        </label>
        <input type="number" id="currentBalance" name="currentBalance" placeholder="0.00" step="0.01" required>
      </div>
      
      <div class="form-actions">
        <button type="button" class="btn-secondary btn-randomize">
          <span class="material-icons-round">shuffle</span>
          Randomize
        </button>
        <button type="submit" class="btn-primary">
          <span class="material-icons-round">add</span>
          Add Account
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Account Details Modal -->
<div class="modal-overlay" id="accountDetailsModal">
  <div class="modal-content details-modal">
    <div class="modal-header">
      <h2>Account Details</h2>
      <button class="btn-close-details">
        <span class="material-icons-round">close</span>
      </button>
    </div>
    <div class="details-content">
      <div class="details-card">
        <div class="detail-section">
          <div class="detail-icon">
            <span class="material-icons-round" id="detailIcon">credit_card</span>
          </div>
          <div class="detail-info">
            <div class="detail-label">Account Type</div>
            <div class="detail-value" id="detailType">Credit Card</div>
          </div>
        </div>
        
        <div class="detail-section">
          <div class="detail-icon">
            <span class="material-icons-round">account_balance</span>
          </div>
          <div class="detail-info">
            <div class="detail-label">Bank Name</div>
            <div class="detail-value" id="detailBank">Master Card</div>
          </div>
        </div>
        
        <div class="detail-section">
          <div class="detail-icon">
            <span class="material-icons-round">tag</span>
          </div>
          <div class="detail-info">
            <div class="detail-label">Account Number</div>
            <div class="detail-value" id="detailNumber">3388 4556 8860 8***</div>
          </div>
        </div>
        
        <div class="detail-section highlight">
          <div class="detail-icon">
            <span class="material-icons-round">account_balance_wallet</span>
          </div>
          <div class="detail-info">
            <div class="detail-label">Current Balance</div>
            <div class="detail-value large" id="detailBalance">₹20,75,000</div>
          </div>
        </div>
      </div>
      
      <div class="details-stats">
        <div class="stat-card">
          <div class="stat-icon">
            <span class="material-icons-round">trending_up</span>
          </div>
          <div class="stat-info">
            <div class="stat-label">This Month</div>
            <div class="stat-value">+₹2,03,350</div>
          </div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon">
            <span class="material-icons-round">calendar_today</span>
          </div>
          <div class="stat-info">
            <div class="stat-label">Last Transaction</div>
            <div class="stat-value">2 days ago</div>
          </div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon">
            <span class="material-icons-round">receipt</span>
          </div>
          <div class="stat-info">
            <div class="stat-label">Total Transactions</div>
            <div class="stat-value">127</div>
          </div>
        </div>
      </div>
      
      <div class="details-actions">
        <button class="btn-primary btn-view-transactions">
          <span class="material-icons-round">list</span>
          View Transactions
        </button>
        <button class="btn-secondary btn-transfer">
          <span class="material-icons-round">swap_horiz</span>
          Transfer
        </button>
      </div>
    </div>
  </div>
</div>

